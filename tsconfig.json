{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@assets/*": ["./assets/*"],
      "@types": ["./types"],
      "@types/*": ["./types/*"]
    },
    "jsx": "preserve",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true
    // "allowJs": true,
    // "lib": ["dom", "es2017"],
    // "removeComments": false,
    // "skipLibCheck": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "pages/**/*.tsx",
    "types/**/*.d.ts",
    "typings/**/*.d.ts"
  ]
}
