{
  "editor.codeActionsOnSave": {
    "source.fixAll.tslint": true
  },
  "editor.formatOnSave": true,
  "files.associations": {
    ".*ignore": "gitignore",
    ".env*": "dotenv"
  },
  "files.trimTrailingWhitespace": true,
  "search.useGlobalIgnoreFiles": true,
  "search.useIgnoreFiles": true,
  // TODO:W links are not clickable https://github.com/Microsoft/vscode/issues/586
  "todohighlight.include": ["src", "pages", "types", "typings", "wiki"],
  "todohighlight.keywordsPattern": "TODO: ",
  "tslint.alwaysShowRuleFailuresAsWarnings": false,
  "tslint.ignoreDefinitionFiles": false,
  "typescript.format.enable": true,
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.validate.enable": true,
  "workbench.editor.labelFormat": "short",
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
