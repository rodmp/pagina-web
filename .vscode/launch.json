{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Launch Jest",
			"runtimeArgs": ["--nolazy"],
			"program": "${workspaceRoot}/node_modules/.bin/jest",
			"cwd": "${workspaceRoot}",
			"console": "integratedTerminal",
			"args": [
				"${fileDirname}/${fileBasenameNoExtension}",
				"--runInBand",
				"--watch",
			],
			"stopOnEntry": false,
			"sourceMaps": true,
		},
	]
}
