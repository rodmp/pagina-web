// TODO: move the rules to tsconfig.json, extend it here (not vice-versa)

{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@assets/*": ["./assets/*"],
      "@types": ["./types"],
      "@types/*": ["./types/*"]
    },
    "jsx": "preserve",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strict": true
  },
  "files": ["src/electron-main.ts"]
}
