{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@types": ["./types"],
      "@types/*": ["./types/*"],
      "@assets/*": ["./assets/*"]
    },
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist",
    "jsx": "preserve",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true
  },
  "files": ["src/electron-main.ts"]
}
